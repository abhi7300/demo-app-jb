<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.demo.activity.ContentActivity"
    android:orientation="vertical"
    android:background="#d11111">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/click_to_go_to_login_activity"
                android:id="@+id/goToLoginTextID"
                android:layout_marginTop="48dp"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/click_to_go_to_sql_activity"
                android:id="@+id/goToSQLTextID"
                android:textColor="#ffffff"
                android:layout_below="@+id/goToLoginTextID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Click to go to Drawer Activity"
                android:id="@+id/goToDrawer"
                android:textColor="#ffffff"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/goToSQLTextID"
                android:layout_alignLeft="@+id/goToLoginTextID"
                android:layout_alignStart="@+id/goToLoginTextID" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Click to go to Webview Activity"
                android:id="@+id/goToWebview"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

</LinearLayout>
